@import 'nib'
@import 'icons.css'
vendor-prefixes ?= webkit moz official

bgc(c)
	background-color c
	&:hover
		background-color darken(c, 6%)
	&:active
		background-color lighten(c,10%) 
		
// bgi('url de la img', position, repeat, size) //
bgi(i, p, r, s)
	background-image url(i)
	background-position p
	background-repeat r
	background-size s
	
*
	border 0
	margin 0
	padding 0
	text-decoration none
	


// C //
.container
	margin 0 auto
	max-width 600px
	overflow hidden
	position relative
	width 100%
	.row
		display inline-block
		text-align center
		vertical-align top
		//width 33.33%
		&:before 
		&:after 
			content ""
			display table 
			clear both
		li
			display inline-block
			list-style none
		*
	    	box-sizing border-box

	[class*='col-']
		float left
		min-height 1px
		vertical-align top
		width 16.66% 
	.col-1
		width 16.66%

	.col-2
		width 33.33%

	.col-3
		width 50%

	.col-4
		width 66.664%

	.col-5
		width 83.33%

	.col-6
		width 100%


@media all and (max-width:800px)
	.col-1
	 width 33.33%
	.col-2
	 width 50%
	.col-3
	 width: 83.33%
	.col-4
	 width: 100%
	.col-5
	 width: 100%
	.col-6
	 width: 100%
	.row .col-5 ~ .col-1
		width 100%




